{config, pkgs, ...}: {
  enable = true;
  keybindings = {
    "Print" = "flameshot gui --raw > /tmp/screenshot.png && xclip -selection clipboard -t image/png /tmp/screenshot.png; pkill flameshot";
    "XF86AudioLowerVolume" = "pamixer -d 3";
    "XF86AudioMute" = "pactl set-sink-mute @DEFAULT_SINK@ toggle";
    "XF86AudioNext" = "playerctl next";
    "XF86AudioPlay;" = "playerctl play-pause";
    "XF86AudioPrev" = "playerctl previous";
    "XF86AudioRaiseVolume" = "pamixer -i 3";
    "alt + F4" = "bspc node --close";
    "alt + Return" = "wezterm";
    "alt + b" = "bspc node --focus @brother";
    "alt + bracketleft" = "bspc node @parent --balance";
    "alt + comma" = "bspc node --focus any.floating.!focused";
    "alt + control + Escape" = "kill -s USR1 $(pidof deadd-notification-center)";
    "alt + control + {1,2}" = "bspc monitor --focus {eDP1,HDMI1}";
    "alt + ctrl + {Left,Up,Down,Right}" = "bspc node --presel-dir ~{west,north,south,east}";
    "alt + f" = "/home/sidharta/.config/bspwm/scripts/toggle-fullscreen-monocle monocle";
    "alt + g" = "/home/sidharta/.config/bspwm/scripts/toggle-borders";
    "alt + p" = "bspc node --focus @parent";
    "alt + q" = "bspc node --to-node last.!automatic";
    "alt + r" = "bspc node @parent --rotate 90";
    "alt + shift + F4" = "bspc node --kill";
    "alt + shift + b" = "bspc node --swap @brother";
    "alt + shift + comma" = "bspc node --state ~floating";
    "alt + shift + control + {1,2}" = "bspc node --to-monitor {eDP1,HDMI1} --follow";
    "alt + shift + f" = "bspc node --state \\~fullscreen";
    "alt + shift + p" = "bspc node --swap @parent/brother";
    "alt + shift + r" = "bspc node @parent --rotate 270";
    "alt + shift + t" = "bspc node --state ~pseudo_tiled";
    "alt + shift + {1-9,0}" = "bspc node --to-desktop '{1-9,10}.local' --follow";
    "alt + shift + {Left,Down,Up,Right}" = "bspc node --swap {west,south,north,east}.local";
    "alt + shift + {j, i, k, l}" = "bspc node -v {-300 0, 0 -300, 0 300, 300 0 }";
    "alt + space" = "rofi -show run";
    "alt + t" = "bspc node --state tiled";
    "alt + {1-9,0}" = "bspc desktop --focus '{1-9,10}.local'";
    "alt + {Left,Down,Up,Right}" = "/home/sidharta/.config/bspwm/scripts/focus-monocle-aware {west,south,north,east}.local";
    "alt + {_,shift +} equal" = "bspc node @parent --ratio -{5,0.1}";
    "alt + {_,shift +} minus" = "bspc node @parent --ratio +{5,0.1}";
    "alt + {j, i, k, l}" = "bspc node -v {-10 0, 0 -10, 0 10, 10 0 }";
    "ctrl + Print" = "flameshot screen --path \"/home/sidharta/screenshots\"";
    "ctrl + shift + F1" = "peek";
    "shift + XF86AudioNext" = "mpc next";
    "shift + XF86AudioPlay" = "mpc toggle";
    "shift + XF86AudioPrev" = "mpc prev";
  };
}
